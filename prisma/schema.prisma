generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lift {
  id           Int      @id @default(autoincrement())
  rpe          Int
  rep          Int
  serie        Int
  weight       Float
  userId       Int
  type         String
  date         DateTime @default(now())
  comment      String?
  failure      Boolean?
  failureSerie Int?
  failureRep   Int?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String
  password String
  weight Int?
  birthday DateTime?
}
